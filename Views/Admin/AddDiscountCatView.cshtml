
@{
    ViewBag.Title = "AddDiscountCatView";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<link href="~/bossCss/bootstrap.min.css" rel="stylesheet" />
@using (Html.BeginForm("AddDiscountProdView", "Admin", FormMethod.Post))
{
    <div class="container" style="margin-top:30px">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title"><strong>Add Discount</strong></h3></div>
                <div class="panel-body">
                    <form role="form">

                        <div class="form-group">
                            <label for="exampleInputCategoryId">Category Name</label>

                            @{

                                Class1 c = new Class1();
                                System.Data.DataSet ds = new System.Data.DataSet();
                                ds = c.selectDATA("select * from CategoryMaster");
                                <select class="form-control" style="width:200px;height:34px" name="cid" id="cid">
                                    @for (int i = 0; i < ds.Tables[0].Rows.Count; i++)
                                    {
                                        <option value=@ds.Tables[0].Rows[i][1]>@ds.Tables[0].Rows[i][2]</option>
                                    }
                                </select>

                                }
                         </div>
                        
                       <button type="submit" class="btn btn-sm btn-default">Next</button>
                    </form>
                    </div>
                </div>
            </div>
        </div>
}

