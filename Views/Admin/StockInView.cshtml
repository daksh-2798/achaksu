
@{
    ViewBag.Title = "StockInView";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<link href="~/bossCss/bootstrap.min.css" rel="stylesheet" />
@{
    Class1 c = new Class1();
    System.Data.DataSet ds = new System.Data.DataSet();
    ds = c.selectDATA("select ProdNo from ProductMaster");

    using (Html.BeginForm("StockInView", "Admin", FormMethod.Post))
    {
        <div class="container" style="margin-top:30px">
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading"><h3 class="panel-title"><strong>Select Delivery Company</strong></h3></div>
                    <div class="panel-body">
                        <form role="form">
                            <div class="form-group">
                                <label for="exampleInputName">Product Id</label>

                                <select class="form-control" style="width:200px;height:34px" id="p" name="p">
                                    @for (int i = 0; i < ds.Tables[0].Rows.Count; i++)
                                    {
                                        <option value=@ds.Tables[0].Rows[i]["ProdNo"]>@ds.Tables[0].Rows[i]["ProdNo"]</option>
                                    }

                                </select>
                                </div>
                            <div class="form-group">
                                <label for="quantity">Quantity</label>
                                <input type="text" name="q" id="q" class="form-control" placeholder="Add Quantity">
                                </div>
                            <div class="form-group">
                                <label for="remarks">Remarks</label>
                                <input type="text" name="r" id="r" class="form-control" placeholder="Add Remarks">
                            </div>

                            
                            <button type="submit" class="btn btn-sm btn-default">Add Quantity</button>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    }
    }




