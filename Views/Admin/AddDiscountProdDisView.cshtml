@model List<Projectnet.Models.ProductMaster>
@{
    ViewBag.Title = "AddDiscountProdDisView";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
@using (Html.BeginForm("AddDiscountProdDisViewPost", "Admin", FormMethod.Post))
{
    
<div class="container" style="margin-top:30px">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><strong>ADD DISCOUNT </strong></h3></div>
            <div class="panel-body">
                <form role="form">

                    <div class="form-group">
                        <label for="exampleInputProductNumber">Product Number</label>
                        <input type="text" class="form-control" id="exampleInputProductNumber" name="pno" readonly value="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputProductName">Product Name</label>
                        <input type="text" class="form-control" readonly id="exampleInputProductName" name="pname" placeholder="Enter ProductName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputBrand">Brand</label>
                        <input type="text" class="form-control" id="exampleInputBrand" readonly name="brand" placeholder="Enter Brand">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputProductDescription">Product Description</label>
                        <input type="text" class="form-control" id="exampleInputProductDescription" readonly name="pdescrp" placeholder="Enter ProductDescription">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPrice">Price</label>
                        <input type="text" class="form-control" id="exampleInputPrice" name="price" placeholder="Enter Price">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDiscount">Discount</label>
                        <input type="text" class="form-control" id="exampleInputDiscount" name="discount" placeholder="Enter Discount Percentage">
                    </div>
                    <button type="submit" class="btn btn-danger">Add Product</button>
                </form>
            </div>
        </div>
    </div>

</div>
    }