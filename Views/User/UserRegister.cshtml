
@{
    ViewBag.Title = "UserRegister";
    Layout = "~/Views/Shared/_UserLayoutPage1.cshtml";
}
<script src="~/js/responsivevoice.js"></script>


<script type="text/javascript">

    responsiveVoice.speak("Welcome to achaksyuat .Register yourself ");

</script>

<script type="text/javascript">
    function speak(a)
        {
    responsiveVoice.speak(a);
    }


    function speakWord(e)
    {
        responsiveVoice.speak(e.key);
    }
</script>



@using (Html.BeginForm("UserRegisterPost", "User", FormMethod.Post))
{
    <div class="container" style="margin-top:30px">
        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title"><strong>REGISTERATION FORM </strong></h3></div>
                <div class="panel-body">
                    <form role="form">
                        <div class="form-group">
                            <label for="exampleInputFN">First Name</label>
                            <input type="text" class="form-control" id="fname" name="fname" onkeypress="speakWord(event);" onfocus="speak('Enter your name.Press tab key after you finish.');" autofocus placeholder="Enter First Name">
                        </div>
                        <div class="form-group">
                          <label>Last Name</label>
                           <input type="text" class="form-control" name="lname" id="lname" placeholder="Enter Last Name" onkeypress="speakWord(event);" onfocus="speak('Enter your last name')";>
    
                         </div>
                        <div class="form-group">
                            <label for="exampleInputGender" >Gender</label>
                            <input type="text" class="form-control" name="gender" id="gender" placeholder="Enter Your Gender" onkeypress="speakWord(event);" onfocus="speak('Enter your Gender.Type M for Male or F for Female or O for Others')" ;>
                            
                        </div>
                        <div class="form-group">
                            <label for="exampleInputDob">Date Of Birth</label> <br/>
                            <label for="exampleInputDate">Date</label>
                            <input type="text" class="form-control" id="date" name="date" placeholder="Enter Date" onkeypress="speakWord(event);" onfocus="speak('Enter Date')";>
                            <label for="exampleInputMonth">Month</label>
                            <input type="text" class="form-control" id="month" name="month" placeholder="Enter Month" onkeypress="speakWord(event);" onfocus="speak('Enter Month')";>
                            <label for="exampleInputMonth">Year</label>
                            <input type="text" class="form-control" id="year" name="year" placeholder="Enter Year" onkeypress="speakWord(event);" onfocus="speak('Enter Year')";>

                        </div>
                        <div class="form-group">
                            <label for="exampleInputBlindper">Blindness Percentage</label>
                            <input type="text" class="form-control" id="bp" name="bp" placeholder="Enter Blind Percentage" onkeypress="speakWord(event);" onfocus="speak('Enter Blind Percentage')";>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUDID">UDID Number</label>
                            <input type="text" class="form-control" id="UDID" name="udid" placeholder="Enter UDID Numner" onkeypress="speakWord(event);" onfocus="speak('Enter u-d-i-d number')";>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputCertficate">Certificate Number</label>
                            <input type="text" class="form-control" id="certificate" name="certificate" placeholder="Enter Certificate Number" onkeypress="speakWord(event);" onfocus="speak('Enter Certificate number')";>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputAdress">Address</label>
                            <input type="text" class="form-control" id="address" name="address" placeholder="Enter Address" onkeypress="speakWord(event);" onfocus="speak('Enter Address')";>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputCity">City</label>
                            <input type="text" class="form-control" id="city" name="city" placeholder="Enter City" onkeypress="speakWord(event);" onfocus="speak('Enter City')";>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputState">State</label>
                            <input type="text" class="form-control" id="state" name="state" placeholder="Enter State" onkeypress="speakWord(event);" onfocus="speak('Enter State')";>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputCountry">Country</label>
                            <input type="text" class="form-control" id="country" name="country" placeholder="Enter Country" value="India" onkeypress="speakWord(event);" onfocus="speak('India')";>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputMob">Mobile Number</label>
                            <input type="text" class="form-control" id="mob" name="mob" placeholder="Mobile Number" onkeypress="speakWord(event);" onfocus="speak('Enter Mobile number')";>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail">Email id</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email ID" onkeypress="speakWord(event);" onfocus="speak('Enter valid email id')";>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="password1" name="password" placeholder="Password" onfocus="speak('Enter Password')";>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Confirm Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password"  onfocus="speak('Enter your password again.And then Press Tab button and then press enter')";>
                        </div>
                        <button type="submit" class="btn btn-sm btn-default">Sign in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}