
@{
    ViewBag.Title = "AdminRegister";
    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}

<link href="~/bossCss/bootstrap.min.css" rel="stylesheet" />
@using (Html.BeginForm("AdminRegisterPost", "Admin", FormMethod.Post))
{

    
<div class="container" style="margin-top:30px">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><strong>REGISTERATION FORM </strong></h3></div>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label for="exampleInputFN">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter First Name">
                    </div>
                    
                    <div class="form-group">
                        <label for="exampleInputGender">Gender</label>
                        <input type="radio" id="exampleInputGender" name="gender" value="male" checked> Male &nbsp;
                        <input type="radio" id="exampleInputGender" name="gender" value="female"> Female &nbsp;
                        <input type="radio" id="exampleInputGender" name="gender" value="other"> Other &nbsp;
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDob">Date Of Birth</label>
                        
                        <input type="text" class="form-control" id="exampleInputDate" name="date" placeholder="Enter Date of Birth">
                        
                    </div>

                    <div class="form-group">
                        <label for="exampleInputMob">Mobile Number</label>
                        <input type="text" class="form-control" id="exampleInputMob" name="mob" placeholder="Mobile Number">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail">Email id</label>
                        <input type="email" class="form-control" id="exampleInputEmail" name="email" placeholder="Enter Email ID">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Confirm Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password">
                    </div>
                    <button type="submit" class="btn btn-sm btn-default">Sign in</button>
                </form>
            </div>
        </div>
    </div>

</div>
}


