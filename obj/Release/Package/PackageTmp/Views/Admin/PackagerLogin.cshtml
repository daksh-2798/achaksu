
@{
    ViewBag.Title = "PackagerLogin";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}



<link href="~/bossCss/bootstrap.min.css" rel="stylesheet" />
@using (Html.BeginForm("PackagerLogin", "Admin", FormMethod.Post))
{
    <div class="container" style="margin-top:30px">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title"><strong>Packager LOGIN</strong></h3></div>
                <div class="panel-body">
                    <form role="form">

                        <div class="form-group">
                            <label for="exampleInputEmail">Email id</label>
                            <input type="email" class="form-control" id="Email" name="email" placeholder="Enter Email ID">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="Password1" name="password" placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-sm btn-default">Log in</button>
                    </form>
                    <div class="panel-default">
                        @if (TempData["ErrMsg"] != null)
                        {
                            <label style="color:red">@TempData["ErrMsg"]</label>
                        }
                        @if (ViewData["ErrMsg"] != null)
                        {
                            <label style="color:green">@ViewData["ErrMsg"]</label>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
}




