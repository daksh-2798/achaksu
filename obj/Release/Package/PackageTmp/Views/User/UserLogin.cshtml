
@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/_UserLayoutPage1.cshtml";
}


<script src="~/js/responsivevoice.js"></script>


<script type="text/javascript">

    responsiveVoice.speak("Welcome to achaksyuat");

</script>

<script type="text/javascript">
    function speak(a)
    {
    responsiveVoice.speak(a);
    }


    function speakWord(e)
    {
        responsiveVoice.speak(e.key);
    }
</script>

@using (Html.BeginForm("UserLogin", "User", FormMethod.Post))
{
<div class="container" style="margin-top:30px">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><strong>LOGIN</strong></h3></div>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label for="exampleInputEmail">Email id</label>
                        <input type="email" class="form-control" id="Email" name="email" onkeypress="speakWord(event);" autofocus onfocus="speak('Enter Email ID');" placeholder="Enter Email ID">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                       
                        <input type="password" class="form-control" id="Password" onfocus="speak('Enter password');" name="password" placeholder="Password">
                    </div>
                    
                    <button type="submit" class="btn btn-sm btn-default">Loog in</button>
                    
                </form>
                <div class="panel-default">
                    @if (TempData["ErrMsg"] != null)
                    {
                        <label style="color:red">@TempData["ErrMsg"]</label>
                    }
                    @if (ViewData["ErrMsg"] != null)
                    {
                        <label style="color:green">@ViewData["ErrMsg"]</label>
                    }
                </div>

            </div>
        </div>
    </div>
    
</div>
}

