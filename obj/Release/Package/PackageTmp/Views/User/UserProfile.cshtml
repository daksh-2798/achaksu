@model Projectnet.Models.UserMaster
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/User_LayoutPage.cshtml";
}

@using (Html.BeginForm())
{

    
    <div class="container" style="margin-top:30px">
        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="panel-title"><strong>REGISTERATION FORM </strong></h3></div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="id">Id</label>
                        <input type="hidden" class="form-control" id="id" name="id" value="@Model.Id">
                    </div>
                        <div class="form-group">
                            <label for="exampleInputFN">First Name</label>
                            <input type="text" class="form-control" id="fname" name="fname" value="@Model.FName">
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" class="form-control" name="lname" id="lname" value="@Model.LName">

                        </div>
                        
                        <div class="form-group">
                            <label for="exampleInputDob">Date Of Birth</label> <br />
                            <label for="exampleInputDate">Date</label>
                            <input type="text" class="form-control" id="date" name="date" value="@Model.Date">
                            <label for="exampleInputMonth">Month</label>
                            <input type="text" class="form-control" id="month" name="month" value="@Model.Month">
                            <label for="exampleInputMonth">Year</label>
                            <input type="text" class="form-control" id="year" name="year" value="@Model.Year">

                        </div>
                        <div class="form-group">
                            <label for="exampleInputBlindper">Blindness Percentage</label>
                            <input type="text" class="form-control" id="bp" name="bp" value="@Model.Blindprec">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUDID">UDID Number</label>
                            <input type="hidden" class="form-control" id="UDID" name="udid" value="@Model.UDID">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputCertficate">Certificate Number</label>
                            <input type="hidden" class="form-control" id="certificate" name="certificate" value="@Model.CertificateNo">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputAdress">Address</label>
                            <input type="text" class="form-control" id="address" name="address" value="@Model.Address">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputCity">City</label>
                            <input type="text" class="form-control" id="city" name="city" value="@Model.City">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputState">State</label>
                            <input type="text" class="form-control" id="state" name="state" value="@Model.State">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputCountry">Country</label>
                            <input type="hidden" class="form-control" id="country" name="country" value="@Model.Country">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputMob">Mobile Number</label>
                            <input type="text" class="form-control" id="mob" name="mob" value="@Model.Mobile">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail">Email id</label>
                            <input type="email" class="form-control" id="email" name="email" value="@Model.Email">
                        </div>

                        
                        
                    
                </div>
            </div>
        </div>
    </div>

    <input type="submit" formaction="Update" value="Update" />
    <!--<input type="submit" formaction="Delete" value="Delete" />-->
}


